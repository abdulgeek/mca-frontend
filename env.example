# React App Environment Configuration

# API Configuration
REACT_APP_API_URL=http://localhost:5001/api
REACT_APP_API_TIMEOUT=30000

# Application Configuration
REACT_APP_NAME=Attendance System
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Face Recognition Attendance System

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_PWA=false

# Face Recognition Configuration
REACT_APP_FACE_API_MODELS_URL=/models
REACT_APP_FACE_DETECTION_CONFIDENCE=0.6
REACT_APP_FACE_QUALITY_THRESHOLD=0.5

# UI Configuration
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=#3b82f6
REACT_APP_SECONDARY_COLOR=#6b7280

# Real-time Configuration
REACT_APP_POLLING_INTERVAL=30000
REACT_APP_EVENT_REFRESH_RATE=5000

# Security Configuration
REACT_APP_ENABLE_HTTPS=false
REACT_APP_CORS_ORIGIN=http://localhost:3000

# Development Configuration
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=info

# Production Configuration
REACT_APP_BUILD_ENV=development
REACT_APP_SENTRY_DSN=
REACT_APP_GOOGLE_ANALYTICS_ID=

# Camera Configuration
REACT_APP_CAMERA_WIDTH=640
REACT_APP_CAMERA_HEIGHT=480
REACT_APP_CAMERA_FACING_MODE=user

# Notification Configuration
REACT_APP_NOTIFICATION_DURATION=5000
REACT_APP_NOTIFICATION_POSITION=top-right

# Export Configuration
REACT_APP_EXPORT_FORMATS=pdf,csv,excel
REACT_APP_MAX_EXPORT_RECORDS=1000
